{
  "compilerOptions": {
    "target": "ES2020",                          // Specify ECMAScript target version
    "module": "commonjs",                        // Specify module code generation
    "rootDir": "./src",                         // Specify the root directory of input files
    "outDir": "./dist",                         // Redirect output structure to the dist directory
    "strict": true,                              // Enable all strict type-checking options
    "esModuleInterop": true,                     // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                        // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,   // Disallow inconsistently-cased references to the same file
    "baseUrl": "./src",                         // Base directory to resolve non-relative module names
    "paths": {
      "*": ["node_modules/*", "src/types/*"]   // Allow importing types from the types directory
    },
    "typeRoots": ["./node_modules/@types", "./src/types"], // Specify type declaration files
    "lib": ["ES2020", "DOM"]                     // Specify library files to be included in the compilation
  },
  "include": [
    "src/**/*"                                   // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules",                              // Exclude node_modules directory
    "dist"                                       // Exclude dist directory
  ]
}